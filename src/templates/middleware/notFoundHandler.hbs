{{!--
  404 Not Found Handler middleware
  Purpose: Handles requests from undefined routes
  Usage in server: app.use(notFoundHandler); // after all routes
--}}

{{#if isTypeScript}}
import { Request, Response, NextFunction } from "express";

export default function notFoundHandler(
  req: Request,
  res: Response,
  next: NextFunction
): void {
  res.status(404).json({
    success: false,
    status: 404,
    message: "Route not found"
  });
}
{{else}}
export default function notFoundHandler(req, res, next) {
  res.status(404).json({
    success: false,
    status: 404,
    message: "Route not found"
  });
}
{{/if}}
