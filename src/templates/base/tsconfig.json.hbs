{{!
tsconfig.json template for TS projects
Design philosophy:
- Strict mode enabled
- Modern target(ES2022 for node 18+)
- Path aliases for clean imports
- Sensible defaults for Express API

}}

{
	"compilerOptions": {
		"target": "ES2022",
		"lib":["ES2022"],
		"module": "{{#if isESM}}ESNext{{else}}CommonJS{{/if}}", "moduleResolution":"{{#if isESM}}bundler{{else}}node{{/if}}", "moduleDetection": "force",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": false,
		"removeComments":true,
		"allowSyntheticDefaultImports":true,
		"esModuleInterop":true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules":true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl":".",
		"paths": {
			"@/*": ["src/*"],
			"@config/*": ["src/config/*"],
"@services/*": ["src/services/*"],
"@routes/*": ["src/routes/*"],
"@middlewares/*":["src/middlewares/*"],
{{#if hasDatabase}}
	"@models/*": ["src/models/*"],
	"@db/*": ["src/db/*"],
{{/if}}
"@controllers/*": ["src/controllers/*"]
},
"typeRoots":["./node_modules/@types", "./src/types"]
},
"include": ["src/**/*","**/*.test.ts", "**/*.spec.ts"],
"exclude": ["node_modules", "dist"]
}